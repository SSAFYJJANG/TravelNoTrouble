<?xml version="1.0" encoding="UTF-8"?>	
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trip.vue.board.model.dao.BoardDao">
	<insert id="insertBoard" parameterType="boardDao">
		insert into board(title, userid, overview, hit)
		values (#{title}, #{userid}, #{overview}, #{hit})
	</insert>

	<select id="listBoard" resultType="boardDto">
		select *
		from board
	</select>
	
	<select id="viewBoard" parameterType="int" resultType="boardDto">
		select *
		from board
		where board_id=#{board_id}
	</select>

	<update id="modifyBoard" parameterType="boardDto">
		update board
		set title=#{title}, overview=#{overview}, modified_time=now()
		where board_id=#{board_id}
	</update>
	
	<delete id="deleteBoard" parameterType="boardDto">
		delete
		from board
		where board_id=#{board_id}
	</delete>
	
	<update id="updateHit" parameterType="int">
		update board
		set hit = hit + 1
		where board_id=#{board_id}
	</update>
	
	<select id="searchBoard" parameterType="map">
		select *
		from board
		where 1=1
        <foreach item="entry" index="key" collection="keyword">
            <if test="entry.value != null">
                AND ${key} = #{entry.value}
            </if>
        </foreach>
		<!-- {'title', '테스트'} or {'userid', 'ssafy'} -->
	</select>
</mapper>
